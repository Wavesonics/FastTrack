<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/default_padding"
	android:background="@drawable/fast_background"
	tools:context=".FastingFragment">

	<TextView
		android:id="@+id/textview_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/default_margin"
		android:textAppearance="@style/TextAppearance.FastTrackTheme.Subtitle1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Status" />

	<TextView
		android:id="@+id/chronometer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/default_margin"
		android:text="00:00"
		android:textAppearance="@style/TextAppearance.FastTrackTheme.Headline2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textview_title" />

	<TextView
		android:id="@+id/textview_stage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.FastTrackTheme.Headline4"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/chronometer"
		tools:text="Stage" />

	<TextView
		android:id="@+id/textview_stage_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/default_margin"
		android:textAppearance="@style/TextAppearance.FastTrackTheme.Body1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textview_stage"
		tools:text="description" />

	<TextView
		android:id="@+id/textview_next_stage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAlignment="viewStart"
		android:textAppearance="@style/TextAppearance.FastTrackTheme.Body2"
		app:layout_constraintEnd_toEndOf="@+id/textview_stage_description"
		app:layout_constraintStart_toStartOf="@+id/textview_stage_description"
		app:layout_constraintTop_toBottomOf="@+id/textview_stage_description"
		tools:text="next stage" />

	<Button
		android:id="@+id/button_start_fast"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/default_margin"
		android:text="@string/start_fast_button"
		app:layout_constraintBottom_toBottomOf="@+id/button_start_fast_advanced"
		app:layout_constraintEnd_toStartOf="@+id/button_start_fast_advanced" />

	<Button
		android:id="@+id/button_start_fast_advanced"
		android:layout_width="48dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/default_margin"
		android:text="@string/start_fast_button_advanced"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />

	<Button
		android:id="@+id/button_end_fast"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/default_margin"
		android:text="@string/end_fast_button"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>